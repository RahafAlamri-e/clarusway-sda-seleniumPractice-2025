<?xml version="1.0" encoding="UTF-8"?>
<!-- status="WARN": Specifies the level of Log4j's internal logs -->
<Configuration status="WARN">
    <!-- Appenders: Specifies where logs will be written -->
    <Appenders>
        <!-- Console Appender: Writes logs to console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <!-- Log pattern explanation:
                     %d{HH:mm:ss.SSS} = Hour:Minute:Second.Millisecond
                     %-5level = Log level (5 characters wide)
                     [%t] = Thread name
                     %logger{36} = Logger name (max 36 characters)
                     %msg = Log message
                     %n = New line
                -->
                <Pattern>
                    %d{HH:mm:ss.SSS} |
                    %highlight{%-5level}{FATAL=red bold, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=blue bold, TRACE=black} |
                    [%t] |
                    %logger{36} |
                    %style{%msg}{white} %n
                </Pattern>
            </PatternLayout>
        </Console>

        <!-- File Appender: Writes logs to file -->
        <RollingFile name="RollingFile"
                     fileName="logs/test.log"
                     filePattern="logs/test-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5level | [%t] | %logger{36} | %msg%n</Pattern>
            </PatternLayout>
            <!-- Creates a new file when file size reaches 10MB -->
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <!-- Keeps maximum 10 files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <!-- Loggers: Specifies which log level and which appenders to use -->
    <Loggers>
        <!-- Root Logger: Settings applicable to all logs -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>